{
  "cSpell.words": [
    "argm",
    "jazzicon",
    "Jazzicon",
    "kindelia",
    "kvar",
    "leng",
    "oper",
    "prps"
  ],
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "eslint.packageManager": "yarn",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript"],
  "files.exclude": {
    "**/.yarn": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/*.lock": true,
    "**/node_modules": true,
    "**/package.json": false,
    "**/turbo.json": true,
    ".vscode": true,
    ".husky": true,
    ".github": false,
    ".eslintignore": true,
    ".eslintrc.js": true,
    ".prettierrc.js": true,
    ".prettierignore": true,
    ".yarnrc": true,
    "**/.gitignore": true,
    "apps/**/postcss.config.js": false,
    "apps/**/tailwind.config.js": false,
    "apps/**/tsconfig.json": false,
    "packages/**/tsconfig.json": false
  },
  "files.insertFinalNewline": true
}
