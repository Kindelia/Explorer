{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint2": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "deploy:explorer": "cd apps/explorer && netlify deploy --build --prod",
    "deploy:sale": "cd apps/sale && netlify deploy --build --prod",
    "format": "prettier --write './**/*.{tsx,ts}'",
    "lint": "eslint --ext .ts,.tsx .",
    "lint-fix": "eslint --ext .ts,.tsx --fix --max-warnings 0 .",
    "type-check": "tsc -p ."
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --ext .ts,.tsx"
    ]
  },
  "//": {
    "./**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --config ./.prettierrc.js"
    ]
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "netlify-cli": "^10.7.1",
    "prettier": "^2.7.1",
    "turbo": "^1.2.16"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
