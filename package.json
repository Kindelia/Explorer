{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "npx husky install",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint2": "turbo run lint",
    "dev": "turbo run dev --parallel",
    "deploy:explorer": "cd apps/explorer && netlify deploy --build --prod",
    "deploy:sale": "cd apps/sale && netlify deploy --build --prod",
    "format": "prettier --write './**/*.{tsx,ts}'",
    "lint": "eslint --ext .ts,.tsx --fix --max-warnings 0 .",
    "type-check": "tsc -p ."
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,css,json}": [
      "prettier --config ./.prettierrc.js --write"
    ],
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.18.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "netlify-cli": "^10.7.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.4",
    "turbo": "^1.2.16"
  }
}
